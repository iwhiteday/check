<% if current_user %>
    <div class="page-header">
      <h1>A bit of information</h1>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <ul>
          <li><strong>Name:</strong> <%= current_user.username %></li>
          <li><strong>Last activity:</strong> <%= current_user.last_activity %></li>
          <li><strong>Avatar URL:</strong> <%= current_user.img_url %></li>
          <li><strong>VK:</strong> <%= current_user.vkontakte %></li>
          <li><strong>Twitter:</strong> <%= current_user.twitter %></li>
          <li><strong>Facebook:</strong> <%= current_user.facebook %></li>
        </ul>
      </div>
    </div>
<% else %>
    <div class="jumbotron">
      <h2>Welcome</h2>
      <p>Please authorize with one of social networks in top right corner</p>
    </div>
<% end %>