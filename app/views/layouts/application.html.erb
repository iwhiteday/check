<!DOCTYPE html>
<html>
  <head>
    <title>Check</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'Home', root_path, class: 'navbar-brand' %>
      </div>
      <div id="navbar">
        <ul class="nav navbar-nav pull-right">
          <% if current_user %>
            <li><%= image_tag current_user.img_url, alt: current_user.username, class: 'ico' %></li>
            <li><%= link_to 'Logout', logout_path, method: :delete %></li>
          <% else %>
            <li>
              <%= link_to image_tag("twitter.png", alt: 'twitter'), '/auth/twitter', class: 'ico' %>
            </li>
            <li>
              <%= link_to image_tag("vk.png", alt: 'vkontakte'), '/auth/vkontakte', class: 'ico' %>
            </li>
            <li>
              <%= link_to image_tag("facebook.png", alt: 'facebook'), '/auth/facebook', class: 'ico' %>
            </li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav">
          <li>
            <%= link_to 'Users', users_path %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
    <% end %>

    <%= yield %>
  </div>
  </body>
</html>
